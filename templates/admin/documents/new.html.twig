{% extends 'base.admin.html.twig' %}
{% block content %}
<h2>Ajouter un document</h2>
<div class="card p-4" style="max-width:600px;margin:auto;">
    {{ form_start(form) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.type) }}
        {{ form_row(form.cours) }}
        {{ form_row(form.fichier) }}
        <button class="btn btn-success mt-3">Enregistrer</button>
        <a href="{{ path('admin_documents') }}" class="btn btn-secondary mt-3">Retour</a>
    {{ form_end(form) }}
</div>
{% endblock %}