{% extends 'base.admin.html.twig' %}
{% block content %}
<h2>Relevé de notes - {{ etudiant.matricule }}</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cours</th>
            <th>Type</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
    {% for note in notes %}
        <tr>
            <td>{{ note.cours.nom }}</td>
            <td>{{ note.type|capitalize }}</td>
            <td>{{ note.note }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<p><strong>Moyenne générale :</strong> {{ moyenne is not null ? moyenne : 'N/A' }}</p>
{% endblock %}