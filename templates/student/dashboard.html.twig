{% extends 'base.student.html.twig' %}
{% block title %}Tableau de Bord Étudiant{% endblock %}
{% block content %}
<h2 class="mb-4 text-success">Tableau de Bord Étudiant</h2>
<div class="row">
    <div class="col-12 col-sm-6 col-lg-3 mb-4">
        <div class="card border-start-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Cours suivis</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ cours|length }}</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 mb-4">
        <div class="card border-start-info shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Notes reçues</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ notes|length }}</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 mb-4">
        <div class="card border-start-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Documents</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ documents|length }}</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 mb-4">
        <div class="card border-start-success shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Emplois du temps</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ emplois|length }}</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}