{% extends 'base.teacher.html.twig' %}
{% block title %}Documents pédagogiques{% endblock %}
{% block content %}
<h2 class="mb-4 text-primary">Documents pédagogiques</h2>
<div class="table-responsive">
    <ul class="list-group">
        {% for doc in documents %}
            <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                <span>
                    {{ doc.titre }} <span class="badge bg-light text-dark ms-2">{{ doc.type|upper }}</span>
                </span>
                <a href="{{ asset('uploads/documents/' ~ doc.fichier) }}" target="_blank" class="btn btn-sm btn-outline-primary mt-2 mt-md-0">
                    <i class="bi bi-download"></i>
                </a>
            </li>
        {% else %}
            <li class="list-group-item text-muted">Aucun document partagé</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}